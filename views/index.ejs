<%- include("header") -%> 
    
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">

        <% tasks.forEach((task) => { %>
            <div class="item">
                <input type="checkbox" name="<%= task.name %>">
                <p><%= task.name %></p>
            </div>
        <% }) %>
 
    </div>

    <div class="box">
        <form class="item" action='/' method="post" >
            <input type="text" name="newTask" id="newTask" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>
    <%- include("footer") -%> 